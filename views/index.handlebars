<div class="container">
    <!--Jumbotron-->
    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4" id="app-title">Awesome Burger <img src="/assets/img/cheeseburger.png"></h1>
        <p class="lead">Welcome to Awesome Burger. Home of the Awesome Burger.</p>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card border border-primary">
                <div class="card-header bg-primary text-white">
                    Can I take your order?
                </div>
                <!--Create/add burger form-->
                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <label for="burger">Place order here:</label>
                            <input type="text" class="form-control" id="burgerToGo" placeholder="">
                        </div>
                        <button class="btn btn-primary" type="submit">Place order</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-4">
        <div class="col-md-6 mt-4">
            <div class="card border border-primary">
                <div class="card-header bg-primary text-white">
                    Burgers
                </div>
                <!--Div to hold burgers that have not been devoured yet-->
                <div class="card-body">
                    <!-- this is left side-->
                    <ul>
                        {{#each burgers}} {{#unless devoured}}
                        <h4>{{burger_name}}</h4>
                        <form action="api/burgers/{{id}}" method="POST">
                            <div class="input-group">
                                <li class="form-control">{{id}}. {{burger_name}}</li>
                                <span class="input-group-btn ">
                                    <button class="btn btn-success change-devour" type="submit">Devour It!</button>
                                </span>
                            </div>
                        </form>
                        {{/unless}} {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6 mt-4">
            <div class="card devoured-card">
                <div class="card-header text-white" id="devoured-card-header">
                    Devoured burgers
                </div>
                <!--When a burger has been devoured, put burger here-->
                <div class="card-body">
                    <!-- this is right side-->
                    <ul>
                        {{#each burgers}} {{#if devoured}}
                        <h4 class="devoured-burger-name">{{burger_name}}</h4>
                        {{/if}} {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>